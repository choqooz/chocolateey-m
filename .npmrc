# Configuración para Railway CI/CD
# Permitir build scripts automáticamente para evitar el warning de "pnpm approve-builds"

# Configuración general
enable-pre-post-scripts=true
auto-install-peers=true

# Permitir build scripts para pnpm en CI/CD environments
# Esto es seguro porque solo afecta dependencias, no el código del proyecto
unsafe-perm=true

# Configuración específica para ignorar la validación de build scripts en CI
# Permite que @biomejs/biome, @swc/core, @tailwindcss/oxide, esbuild ejecuten sus builds
ignore-scripts=false 